            android:screenOrientation="portrait"/>
        <activity android:name=".ui.booksession.activities.BookSessionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.medicalhistory.activities.AddMedicalHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.medicalhistory.activities.MedicalHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.BaseActivity"/>
        <activity android:name=".ui.specialists.activities.SpecialistsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.medication.activities.MedicationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.familyhistory.activities.AddFamilyHistoryActivity"
            android:screenOrientation="portrait"/>
