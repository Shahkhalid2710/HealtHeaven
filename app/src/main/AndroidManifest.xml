            android:screenOrientation="portrait"/>
        <activity android:name=".ui.allergyhistory.activities.AddAllergyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.investigation.activities.InvestigationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.allergyhistory.activities.AllergyHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.familyhistory.activities.FamilyHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.settings.activities.SettingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.changepassword.activities.ChangePasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.mydownloads.activities.MyDownloadsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.clinicalrecords.activities.ClinicalRecordsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.personaldetails.activities.PersonalDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.bottomnavigationview.activities.BottomNavigationViewActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.signup.activities.SignupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.createnewpassword.activities.CreateNewPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.verification.activities.VerificationActivity"
            android:screenOrientation="portrait"/>
