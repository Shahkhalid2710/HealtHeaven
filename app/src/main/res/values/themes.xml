<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConnectToMyHealth" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="colorControlHighlight">@color/colorripple</item>
        <!--
                <item name="colorOnPrimary">@color/white</item>
        -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>

        <item name="android:colorEdgeEffect">@color/green</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

<!--
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
-->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MyCustomTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBarTheme</item>

    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background">@color/green</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflow</item>

    </style>

    <style name="ActionOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Text -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Backgroundlayout">
        <item name="android:background">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="codepickerdialog">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>
    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/custom_btn</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="Edittextstyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:drawableEnd">@drawable/ic_eye</item>
        <item name="android:backgroundTint">@color/textcolorgrey</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/green</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>
    <style name="PasswordEdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:drawableEnd">@drawable/ic_eye</item>
        <item name="android:drawableRight">@drawable/ic_eye</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="WeekdayHeader">
        <item name="android:textColor">@color/aapBlack</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
    <style name="MonthdayHeader">
        <item name="android:textColor">@color/aapBlack</item>
        <item name="android:textSize">@dimen/font_19</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="DatedayHeader">
        <item name="android:textColor">@color/aapBlack</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_back_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_back_out</item>
    </style>

    <style name="ActivityAnimation2" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_bottom</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_top</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_top</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/custom_solid_white</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/font_13</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/boldgrey</item>
        <item name="textColorAlertDialogListItem">@color/aapBlack</item>
        <item name="android:background">@drawable/custom_solid_white</item>
        <item name="android:colorControlActivated">@color/boldgrey</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:textSize">@dimen/font_17</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CropTheme">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CategoryDialog">
        <item name="android:background">@drawable/custom_solid_white</item>
    </style>
</resources>