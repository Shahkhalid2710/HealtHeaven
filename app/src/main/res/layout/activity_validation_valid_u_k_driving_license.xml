<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.verificationdocument.activities.ValidationValidUKDrivingLicenseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_25"
            android:contentDescription="@string/todo"
            android:focusable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/uk_driving_license"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_20" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_16"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_46"
                android:layout_marginEnd="@dimen/spacing_24"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/your_safety_is_our_priority_to_prevent_misuse_of_your_details_upload_a_valid_form_of_driving_licence"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:id="@+id/ivDrivingLicense"
                android:layout_width="248dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/driving_license" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="182dp"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_marginBottom="27dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRetakePhoto"
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:foreground="@drawable/effect_button"
                    android:background="@drawable/default_button"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/retake_a_photo"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_12"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:foreground="@drawable/effect_button"
                    android:background="@drawable/custom_btn"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>