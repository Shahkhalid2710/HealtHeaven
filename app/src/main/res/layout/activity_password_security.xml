<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.passwordsecurity.activities.PasswordSecurityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_24"
        android:layout_marginEnd="@dimen/spacing_24"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_password_security" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_10"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/use_pin_pattern_password_for_security"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_10"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/secure_access_to_clinical_records_by_using_same_pin_password_or_fingerprint_you_use_to_unlock_your_phone"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <Button
            android:id="@+id/btnUseDeviceSecurity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_30"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:foreground="@drawable/effect_button"
            android:text="@string/use_device_security"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNotNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_30"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/not_now"
            android:textColor="@color/green"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

</LinearLayout>