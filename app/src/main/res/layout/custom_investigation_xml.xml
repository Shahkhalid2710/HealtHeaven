<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="183dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_investigation" />

        <TextView
            android:id="@+id/tvNoInvestigation"
            android:layout_width="166dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_35"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/no_investigation_added"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tvNoAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/to_add_investigation_tap_on_button"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <Button
            android:id="@+id/btnAddInvestigation"
            android:layout_width="168dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="66dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:foreground="@drawable/effect_button"
            android:text="@string/add_investigation"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</LinearLayout>