<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="263dp"
    android:layout_height="180dp"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/remove_saved_cards"
        android:textColor="@color/aapBlack"
        android:textSize="@dimen/font_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        android:text="@string/are_you_sure_you_want_to_remove_this_card"
        android:textColor="@color/aapBlack"
        android:textSize="@dimen/font_12" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/spacing_16"
        android:layout_marginBottom="27dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:foreground="@drawable/effect_button"
            android:background="@drawable/custom_red_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_16"
            android:foreground="@drawable/effect_button"
            android:background="@drawable/default_red_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="@dimen/font_12"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>