<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.verificationdocument.activities.VerifiedActivity">

        <ImageView
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:layout_marginTop="141dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_verified" />

        <TextView
            android:id="@+id/tvVerified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_24"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/verified"
            android:textColor="@color/green"
            android:textSize="@dimen/font_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_16"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/your_identity_is_successfully_verified"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_16" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="126dp"
            android:layout_marginBottom="103dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:foreground="@drawable/effect_button"
            android:text="@string/_continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>