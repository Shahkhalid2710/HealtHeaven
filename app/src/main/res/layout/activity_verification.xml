<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.verification.VerificationActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_25"
                android:contentDescription="@string/todo"
                android:focusable="true"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvVerification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/verification"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_20" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvVerificationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_43"
                android:layout_marginEnd="@dimen/spacing_24"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="@string/please_enter_the_verification_code_we_sent_to_your_mobile_number"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/spacing_10"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/_9054216535"
                android:textColor="@color/green"
                android:textSize="@dimen/font_14" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_25"
            android:layout_marginTop="@dimen/spacing_25"
            android:layout_marginEnd="@dimen/spacing_25"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etno1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:autofillHints="0"
                android:backgroundTint="@color/textcolorgrey"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="@dimen/spacing_5"
                android:text="@string/_4"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_24"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/etno2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:autofillHints="0"
                android:backgroundTint="@color/textcolorgrey"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="@dimen/spacing_5"
                android:text="@string/_4"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_24"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/etno3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:autofillHints="0"
                android:backgroundTint="@color/textcolorgrey"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="@dimen/spacing_5"
                android:text="@string/_4"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_24"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/etno4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:autofillHints="0"
                android:backgroundTint="@color/textcolorgrey"
                android:focusable="true"
                android:imeOptions="actionDone"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="@dimen/spacing_5"
                android:text="@string/_4"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_24"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNotReceiveCode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_15"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/not_recieved_code"
                android:textColor="@color/aapBlack"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_15"
                android:layout_marginStart="@dimen/spacing_5"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/resend"
                android:textColor="@color/green"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="168dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_40"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/verify"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>