<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_25"
        android:layout_marginBottom="@dimen/spacing_30"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_15"
            android:layout_marginEnd="@dimen/spacing_15"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/safety_measure"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_15"
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_marginEnd="@dimen/spacing_15"
            android:text="@string/for_your_safety_our_specialists_may_need_visibility_of_your_location_only_during_the_consultation"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_15"
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_marginEnd="@dimen/spacing_15"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_30"
                    android:layout_marginEnd="@dimen/spacing_30"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/cancel_"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tvContinue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/continue_"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_15"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>