<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_medical_history" />

        <TextView
            android:id="@+id/tvNoMedicalHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_35"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/no_medical_history"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tvNoAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_24"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/spacing_24"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/to_add_medical_records_tap_on_button_above"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
</LinearLayout>