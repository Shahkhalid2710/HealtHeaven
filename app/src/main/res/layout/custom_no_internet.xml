<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/noInternet"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="147dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_internet" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_35"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/oops_connection_lost"
            android:textColor="@color/aapBlack"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_45"
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_marginEnd="@dimen/spacing_45"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/retry"
            android:focusable="true"
            android:clickable="true"
            android:foreground="@drawable/effect"
            android:textColor="@color/green"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

</LinearLayout>