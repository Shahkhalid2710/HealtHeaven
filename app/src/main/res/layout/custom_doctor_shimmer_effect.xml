<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvDoctor"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/spacing_10"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/effect_button"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B3B3B3"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_10"
            android:elevation="10dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/ivDoctor"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#B3B3B3"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cardViewDoctor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDoctorFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#B3B3B3"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDoctorDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#B3B3B3"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_11" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tvDoctorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:background="#B3B3B3"
                    android:textSize="@dimen/font_10"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


